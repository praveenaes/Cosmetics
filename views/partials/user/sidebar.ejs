<style>
    /* Modern Sidebar Styling */
:root {
  --primary-color: #4361ee;
  --primary-hover: #3a0ca3;
  --secondary-color: #6c757d;
  --accent-color: #4cc9f0;
  --light-bg: #f8f9fa;
  --dark-bg: #2c3e50;
  --text-light: #f8f9fa;
  --text-dark: #343a40;
  --border-radius: 12px;
  --box-shadow: 0 8px 15px rgba(0, 0, 0, 0.15);
  --transition: all 0.3s ease;
}

/* Sidebar Container */
#sidebarContent {
  background: linear-gradient(135deg, #f8f9fa 0%, #e0f7fa 50%, #bbdefb 100%);
  border-radius: var(--border-radius);
  box-shadow: var(--box-shadow);
  padding: 1.5rem 0;
  height: 100%;
  min-height: 100vh;
  width: 280px; /* Increased width */
  max-width: 100%;
  margin-right: 1rem;
}

/* Profile Image */
.sidebar-profileImage {
  position: relative;
  padding: 1rem 0 !important;
}

.profile-img {
  width: 140px;
  height: 140px;
  border-radius: 50%;
  object-fit: cover;
  border: 5px solid var(--primary-color);
  box-shadow: 0 10px 20px rgba(67, 97, 238, 0.3);
  transition: var(--transition);
  position: relative;
  z-index: 2;
}

.sidebar-profileImage:after {
  content: "";
  position: absolute;
  width: 150px;
  height: 150px;
  border-radius: 50%;
  background: linear-gradient(45deg, var(--accent-color), var(--primary-color));
  opacity: 0.3;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  z-index: 1;
  animation: pulse 3s infinite;
}

@keyframes pulse {
  0% { transform: translate(-50%, -50%) scale(1); opacity: 0.3; }
  50% { transform: translate(-50%, -50%) scale(1.1); opacity: 0.15; }
  100% { transform: translate(-50%, -50%) scale(1); opacity: 0.3; }
}

.profile-img:hover {
  transform: scale(1.05);
  border-color: var(--accent-color);
}

/* Username */
.sidebar-username {
  margin: 1rem 0 1.5rem !important;
}

.sidebar-username h5 {
  color: var(--primary-color);
  font-weight: 700;
  letter-spacing: 1px;
  font-size: 1.3rem;
  text-shadow: 1px 1px 1px rgba(0, 0, 0, 0.1);
}

/* Navigation List */
.sidebar-nav {
  margin-top: 1rem;
}

hr {
  background-color: rgba(74, 111, 165, 0.2);
  height: 2px;
  border: none;
  margin: 1rem auto !important;
}

.sidebar-item {
  margin: 0.7rem 0 !important;
  transition: var(--transition);
}

.sidebar-link {
  display: block;
  color: var(--text-dark);
  text-decoration: none;
  padding: 0.85rem 1.25rem !important;
  border-radius: var(--border-radius);
  transition: var(--transition);
  font-size: 1rem;
  position: relative;
  overflow: hidden;
  letter-spacing: 0.5px;
  margin: 0.25rem 0.5rem;
  box-shadow: 0 2px 5px rgba(0,0,0,0.05);
}

.sidebar-link:before {
  content: "";
  position: absolute;
  left: 0;
  bottom: 0;
  height: 3px;
  width: 0;
  background-color: var(--accent-color);
  transition: var(--transition);
}

.sidebar-link:hover {
  background-color: rgba(74, 111, 165, 0.1);
  color: var(--primary-color);
  transform: translateX(5px);
}

.sidebar-link:hover:before {
  width: 100%;
}

.sidebar-link span {
  position: relative;
  z-index: 2;
}

/* Active Link */
.sidebar-link.active {
  background-color: var(--primary-color);
  color: var(--text-light);
  font-weight: bold;
}

.sidebar-link.active:hover {
  background-color: var(--primary-hover);
  color: var(--text-light);
}

/* Logout Link */
a[href="/logout"] {
  margin-top: 2rem;
  font-weight: bold;
  transition: var(--transition);
}

a[href="/logout"] span {
  color: #dc3545 !important;
  transition: var(--transition);
}

a[href="/logout"]:hover {
  background-color: rgba(220, 53, 69, 0.1);
  transform: translateX(5px);
}

a[href="/logout"]:hover span {
  color: #c82333 !important;
}

/* Responsive adjustments */
@media (max-width: 768px) {
  #sidebarContent {
    min-height: auto;
    border-radius: 0;
  }
  
  .profile-img {
    width: 100px;
    height: 100px;
  }
  
  .sidebar-username h5 {
    font-size: 1.1rem;
  }
}

/* Additional Animation Effects */
@keyframes fadeIn {
  from { opacity: 0; transform: translateY(10px); }
  to { opacity: 1; transform: translateY(0); }
}

.sidebar-item {
  animation: fadeIn 0.3s ease forwards;
  animation-delay: calc(var(--i) * 0.1s);
  opacity: 0;
}

/* Set animation delay for each item */
.sidebar-item:nth-child(1) { --i: 1; }
.sidebar-item:nth-child(2) { --i: 2; }
.sidebar-item:nth-child(3) { --i: 3; }
.sidebar-item:nth-child(4) { --i: 4; }
.sidebar-item:nth-child(5) { --i: 5; }
.sidebar-item:nth-child(6) { --i: 6; }

/* Custom Scrollbar Styling */
::-webkit-scrollbar {
  width: 8px; /* Width of the scrollbar */
}

::-webkit-scrollbar-track {
  background: transparent; /* Track color (background behind the thumb) */
}

::-webkit-scrollbar-thumb {
  background-color: white; /* Color of the scrollbar handle */
  border-radius: 10px;
  border: 2px solid transparent;
  background-clip: content-box;
}

::-webkit-scrollbar-thumb:hover {
  background-color: #e0e0e0; /* Slightly darker on hover */
}

</style>


