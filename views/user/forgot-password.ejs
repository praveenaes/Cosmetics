.card-login {
    animation: cardSlideUp 0.6s ease-out;
}

@keyframes cardSlideUp {
    from {
        opacity: 0;
        transform: translateY(30px);
        box-shadow: none;
    }
    to {
        opacity: 1;
        transform: translateY(0);
        box-shadow: 
            0 4px 6px rgba(0, 0, 0, 0.07),
