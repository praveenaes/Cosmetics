<%- include("../../views/partials/user/header") %>
<style>
  /* Reset and Base Styles */
* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

body {
  font-family:Arial, Helvetica, sans-serif;
  line-height: 1.6;
  color: #333;
  background-color: #f9f9f9;
}

.container {
  max-width: 1200px;
  margin: 0 auto;
  padding: 0 20px;
}

/* Main Container */
.main-container {
  margin-top: 80px;
}

/* Shop Page Layout */
.shop-page {
  padding: 40px 0;
}

/* Top Bar - Made Higher */
.shop-topbar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30px;
  padding: 30px 0; /* Increased from 20px */
  border-bottom: 2px solid #ddd;
  min-height: 100px; /* Added minimum height */
}

/* Search Bar */
.search-bar {
  flex: 1;
  margin-right: 20px;
}

.search-form {
  display: flex;
  gap: 12px;
  align-items: center;
}

.search-input {
  padding: 18px 22px; /* Increased padding for height */
  border: 2px solid #e0e0e0;
  border-radius: 10px;
  font-size: 16px;
  width: 320px;
  font-family: inherit;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  background: linear-gradient(145deg, #ffffff, #f8f9fa);
  min-height: 56px; /* Added minimum height */
}

.search-input:focus {
  outline: none;
  border-color: #0a0a6c;
  box-shadow: 0 0 0 3px rgba(10, 10, 108, 0.1);
  transform: translateY(-1px);
}

/* Search Button - New Green Color */
.search-button {
  padding: 18px 28px; /* Increased padding for height */
  background: linear-gradient(135deg, #1857ec, #288ef5); /* Green gradient */
  color: white;
  border: none;
  border-radius: 10px;
  cursor: pointer;
  text-decoration: none;
  font-size: 14px;
  font-family: inherit;
  font-weight: 600;
  display: inline-block;
  text-align: center;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  position: relative;
  overflow: hidden;
  text-transform: uppercase;
  letter-spacing: 0.5px;
  min-height: 56px; /* Added minimum height */
}

.search-button::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(95, 158, 241, 0.2), transparent);
  transition: left 0.5s ease;
}

.search-button:hover::before {
  left: 100%;
}

.search-button:hover {
  background: linear-gradient(135deg, #20c997, #17a2b8); /* Darker green on hover */
  transform: translateY(-2px);
  box-shadow: 0 6px 20px rgba(40, 167, 69, 0.3);
}

/* Clear Button - New Orange Color */
.clear-btn {
  padding: 18px 28px; /* Increased padding for height */
  background: linear-gradient(135deg, #f5f3f2, #f8f7f6); /* Orange gradient */
  color: rgb(14, 13, 13);
  border: none;
  border-radius: 10px;
  cursor: pointer;
  text-decoration: none;
  font-size: 14px;
  font-family: inherit;
  font-weight: 600;
  display: inline-block;
  text-align: center;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  position: relative;
  overflow: hidden;
  text-transform: uppercase;
  letter-spacing: 0.5px;
  min-height: 56px; /* Added minimum height */
}

.clear-btn::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255,255,255,0.2), transparent);
  transition: left 0.5s ease;
}

.clear-btn:hover::before {
  left: 100%;
}

.clear-btn:hover {
  background: linear-gradient(135deg, #ff8c00, #ff6b35); /* Darker orange on hover */
  transform: translateY(-2px);
  box-shadow: 0 6px 20px rgba(253, 126, 20, 0.3);
}

/* Sort Dropdown - Made Higher */
.sort-dropdown {
  min-width: 220px;
}

.form-select {
  padding: 18px 22px; /* Increased padding for height */
  border: 2px solid #e0e0e0;
  border-radius: 10px;
  font-size: 16px;
  font-family: inherit;
  background: linear-gradient(145deg, #ffffff, #f8f9fa);
  cursor: pointer;
  width: 100%;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  font-weight: 500;
  min-height: 56px; /* Added minimum height */
}

.form-select:focus {
  outline: none;
  border-color: #0a0a6c;
  box-shadow: 0 0 0 3px rgba(10, 10, 108, 0.1);
  transform: translateY(-1px);
}

.form-select:hover {
  border-color: #0a0a6c;
  box-shadow: 0 2px 8px rgba(10, 10, 108, 0.1);
}

/* Product List Container */
.product-list-container {
  display: flex;
  gap: 30px;
}

/* Sidebar */
.sidebar {
  width: 250px;
  background: linear-gradient(145deg, #ffffff, #f8f9fa);
  padding: 25px;
  border: 1px solid #e0e0e0;
  border-radius: 12px;
  height: fit-content;
  box-shadow: 0 4px 15px rgba(0,0,0,0.08);
  position: sticky;
  top: 20px;
}

.filter-section {
  margin-bottom: 35px;
  position: relative;
}

.filter-section::after {
  content: '';
  position: absolute;
  bottom: -15px;
  left: 0;
  right: 0;
  height: 2px;
  background: linear-gradient(90deg, #0a0a6c, transparent);
  border-radius: 1px;
}

.filter-section:last-child::after {
  display: none;
}

.filter-title {
  font-size: 16px;
  font-weight: bold;
  margin-bottom: 18px;
  color: #2c3e50;
  text-transform: uppercase;
  letter-spacing: 1.5px;
  position: relative;
  padding-bottom: 8px;
  border-bottom: 2px solid #ecf0f1;
}

.filter-title::before {
  content: '';
  position: absolute;
  bottom: -2px;
  left: 0;
  width: 30px;
  height: 2px;
  background-color: #0a0a6c;
  border-radius: 1px;
}

.category-brand-container ul {
  list-style: none;
}

.filter-item {
  margin-bottom: 6px;
  transform: translateX(0);
  transition: transform 0.2s ease;
}

.filter-item:hover {
  transform: translateX(5px);
}

.filter-item a {
  display: block;
  padding: 12px 16px;
  color: #555;
  text-decoration: none;
  border-radius: 8px;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  position: relative;
  overflow: hidden;
  border: 1px solid transparent;
  font-weight: 500;
}

.filter-item a::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(219, 112, 147, 0.1), transparent);
  transition: left 0.5s ease;
}

.filter-item a:hover::before {
  left: 100%;
}

.filter-item a:hover {
  background-color: #f8f9fa;
  color: #2c3e50;
  border-color: #db7093;
  box-shadow: 0 2px 8px rgba(219, 112, 147, 0.15);
  transform: translateY(-1px);
}

/* Categories and Price Filtering - Pink Color When Selected */
.filter-item.active a {
  background: linear-gradient(135deg, #db7093, #c06080); /* Pink gradient */
  color: white;
  border-color: #db7093;
  box-shadow: 0 4px 12px rgba(219, 112, 147, 0.3);
  font-weight: 600;
}

.filter-item.active a::after {
  content: '✓';
  position: absolute;
  right: 12px;
  top: 50%;
  transform: translateY(-50%);
  font-size: 12px;
  opacity: 0.8;
}

/* Price Filter */
.price-filter {
  margin-top: 20px;
}

.price-options {
  display: flex;
  flex-direction: column;
  gap: 12px;
}

.price-options a {
  text-decoration: none;
  transform: translateX(0);
  transition: transform 0.2s ease;
}

.price-options a:hover {
  transform: translateX(3px);
}

.price-button {
  width: 100%;
  padding: 14px 18px;
  border: 2px solid #e0e0e0;
  background: linear-gradient(145deg, #ffffff, #f8f9fa);
  color: #555;
  cursor: pointer;
  border-radius: 10px;
  font-family: inherit;
  font-size: 14px;
  font-weight: 500;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  position: relative;
  overflow: hidden;
}

.price-button::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(219, 112, 147, 0.1), transparent);
  transition: left 0.5s ease;
}

.price-button:hover::before {
  left: 100%;
}

.price-button:hover {
  border-color: #db7093;
  color: #2c3e50;
  box-shadow: 0 4px 15px rgba(219, 112, 147, 0.15);
  transform: translateY(-2px);
  background: linear-gradient(145deg, #f8f9fa, #ffffff);
}

.price-button.active {
  background: linear-gradient(135deg, #db7093, #c06080); /* Pink gradient */
  color: white;
  border-color: #db7093;
  box-shadow: 0 6px 20px rgba(219, 112, 147, 0.3);
  transform: translateY(-1px);
  font-weight: 600;
}

.price-button.active::after {
  content: '✓';
  position: absolute;
  right: 15px;
  top: 50%;
  transform: translateY(-50%);
  font-size: 12px;
  opacity: 0.9;
}

/* Product Grid */
.product-grid {
  flex: 1;
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
  gap: 30px;
}

/* Product Cards - Thicker Black Border */
.product-card {
  background: linear-gradient(145deg, #ffffff, #f8f9fa);
  border: 1px solid #333333; /* Changed to thicker black border */
  border-radius: 12px;
  padding: 20px;
  text-align: center;
  position: relative;
  transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  height: 400px;
  display: flex;
  flex-direction: column;
  overflow: hidden;
}

.product-card::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(135deg, rgba(10, 10, 108, 0.05), transparent);
  opacity: 0;
  transition: opacity 0.3s ease;
  pointer-events: none;
}

.product-card:hover::before {
  opacity: 1;
}

.product-card:hover {
  box-shadow: 0 15px 35px rgba(0,0,0,0.15), 0 5px 15px rgba(0,0,0,0.1);
  transform: translateY(-8px) scale(1.02);
  border-color: #000000; /* Darker black on hover */
}

.wishlist-btn {
  position: absolute;
  top: 15px;
  right: 15px;
  font-size: 20px;
  cursor: pointer;
  z-index: 2;
  transition: all 0.3s ease;
  background: rgba(255, 255, 255, 0.9);
  width: 35px;
  height: 35px;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  backdrop-filter: blur(10px);
  border: 1px solid rgba(255, 255, 255, 0.2);
}

.wishlist-btn:hover {
  transform: scale(1.1);
  background: rgba(255, 255, 255, 1);
  box-shadow: 0 4px  12px rgb(215, 56, 3);
}

.product-card a {
  text-decoration: none;
  color: inherit;
  flex: 1;
  display: flex;
  flex-direction: column;
}

.product-card img {
  width: 100%;
  height: 200px;
  object-fit: cover;
  border-radius: 8px;
  margin-bottom: 15px;
  transition: all 0.4s ease;
  filter: brightness(1);
}

.product-card:hover img {
  transform: scale(1.05);
  filter: brightness(1.1);
}

.product-card h4 {
  font-size: 18px;
  margin-bottom: 12px;
  color: #2c3e50;
  font-weight: 600;
  transition: color 0.3s ease;
  line-height: 1.3;
}

.product-card:hover h4 {
  color: #0a0a6c;
}

.product-card p {
  margin-bottom: 8px;
  color: #666;
  font-size: 14px;
  transition: color 0.3s ease;
}

.product-card:hover p {
  color: #555;
}

.text-muted {
  color: #999;
}

.add-to-cart-btn {
  width: 140px;
  height: 40px;
  background: linear-gradient(135deg, #0a0a6c, #1a1a7c);
  color: white;
  border: none;
  border-radius: 8px;
  cursor: pointer;
  font-family: inherit;
  font-size: 14px;
  font-weight: 600;
  margin: 15px auto 0;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  position: relative;
  overflow: hidden;
  text-transform: uppercase;
  letter-spacing: 0.5px;
}

.add-to-cart-btn::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255,255,255,0.2), transparent);
  transition: left 0.5s ease;
}

.add-to-cart-btn:hover::before {
  left: 100%;
}

.add-to-cart-btn:hover {
  background: linear-gradient(135deg, #1a1a7c, #2a2a8c);
  transform: translateY(-2px);
  box-shadow: 0 8px 20px rgba(10, 10, 108, 0.4);
}

.add-to-cart-btn:active {
  transform: translateY(0);
  box-shadow: 0 4px 10px rgba(10, 10, 108, 0.3);
}

/* Pagination */
.pagination {
  display: flex;
  justify-content: center;
  align-items: center;
  gap: 10px;
  margin-top: 40px;
  padding-top: 30px;
  border-top: 1px solid #ddd;
}

.pagination .btn {
  padding: 10px 16px;
  border: 2px solid #ddd;
  background-color: white;
  color: #666;
  text-decoration: none;
  border-radius: 3px;
  transition: all 0.3s ease;
  min-width: 44px;
  text-align: center;
}

.pagination .btn:hover {
  border-color: #333;
  color: #333;
}

.pagination .btn.active {
  background-color: #333;
  color: white;
  border-color: #333;
}

/* Responsive Design */
@media (max-width: 768px) {
  .shop-topbar {
    flex-direction: column;
    gap: 20px;
    align-items: stretch;
    padding: 25px 0; /* Adjusted for mobile */
  }
  
  .search-input {
    width: 100%;
  }
  
  .product-list-container {
    flex-direction: column;
  }
  
  .sidebar {
    width: 100%;
    order: 2;
  }
  
  .product-grid {
    order: 1;
    grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
    gap: 20px;
  }
  
  .price-options {
    flex-direction: row;
    flex-wrap: wrap;
  }
  
  .price-button {
    flex: 1;
    min-width: 120px;
  }
}

@media (max-width: 480px) {
  .container {
    padding: 0 15px;
  }
  
  .product-grid {
    grid-template-columns: 1fr;
  }
  
  .search-form {
    flex-direction: column;
    align-items: stretch;
  }
  
  .pagination {
    flex-wrap: wrap;
  }
}
</style>

<div class="main-container" style="margin-top: 80px;" >
  <section class="shop-page container">
    <div class="shop-topbar">
      <div class="search-bar">
        <form action="/shop" method="GET" class="search-form">
          <input type="text" name="query" placeholder="Search items..." class="search-input" value="<%= query.query %>" />
          <button type="submit" class="search-button">Search</button>
          <a href="/shop" class="search-button clear-btn">Clear</a>
        </form>
        
        
        
      </div>

      <div class="sort-dropdown">
        <form action="/shop" method="GET">
          <select name="sort" class="form-select" onchange="this.form.submit()">
            <option value="price-asc" <% if (query.sort === 'price-asc') { %> selected <% } %>>Price: Low to High</option>
            <option value="price-desc" <% if (query.sort === 'price-desc') { %> selected <% } %>>Price: High to Low</option>
            <option value="name-asc" <% if (query.sort === 'name-asc') { %> selected <% } %>>A - Z</option>
            <option value="name-desc" <% if (query.sort === 'name-desc') { %> selected <% } %>>Z - A</option>
          </select>
        </form>
      </div>
    </div>

    <div class="product-list-container">
      <aside class="sidebar" style="border-color: #888686;" >
        <div class="filter-section">
  <div style="font-family:Georgia, 'Times New Roman', Times, serif" class="filter-title">CATEGORIES</div>
  <div class="category-brand-container">
    <ul>
      <% for (let i = 0; i < category.length; i++) { 
           let isActive = query.category === String(category[i]._id);
      %>
        <li class="filter-item <%= isActive ? 'active' : '' %>">
          <a href="/shop?category=<%= category[i]._id %>&sort=<%= query.sort %>&query=<%= query.query %>&gt=<%= query.gt %>&lt=<%= query.lt %>">
            <%= category[i].name %>
          </a>
        </li>
      <% } %>
    </ul>
  </div>
</div>


        
        <div class="price-filter">
  <div style="font-family:Georgia, 'Times New Roman', Times, serif" class="filter-title">FILTER BY PRICE</div>
  <form id="price-filter-form">
    <div class="price-options">
      <% const gt = Number(query.gt); const lt = Number(query.lt); %>

      <a href="/shop?gt=0&lt=500&sort=<%= query.sort %>&query=<%= query.query %>&category=<%= query.category %>&brand=<%= query.brand %>">
        <button type="button" class="price-button <%= gt === 0 && lt === 500 ? 'active' : '' %>">Under ₹500</button>
      </a>

      <a href="/shop?gt=500&lt=1000&sort=<%= query.sort %>&query=<%= query.query %>&category=<%= query.category %>&brand=<%= query.brand %>">
        <button type="button" class="price-button <%= gt === 500 && lt === 1000 ? 'active' : '' %>">₹500 - ₹1000</button>
      </a>

      <a href="/shop?gt=1000&lt=1500&sort=<%= query.sort %>&query=<%= query.query %>&category=<%= query.category %>&brand=<%= query.brand %>">
        <button type="button" class="price-button <%= gt === 1000 && lt === 1500 ? 'active' : '' %>">₹1000 - ₹1500</button>
      </a>

      <a href="/shop?gt=1500&lt=1000000&sort=<%= query.sort %>&query=<%= query.query %>&category=<%= query.category %>&brand=<%= query.brand %>">
        <button type="button" class="price-button <%= gt === 1500 && lt === 1000000 ? 'active' : '' %>">Above ₹1500</button>
      </a>
    </div>
  </form>
</div>

      </aside>

      <main class="product-grid">
        <% for (let i = 0; i < products.length; i++) { %>
          <div class="product-card" style="height:400px" >
            <span class="wishlist-btn" onclick="addToWishlist('<%=products[i]._id%>')">❤️</span>
            <a href="/productDetails?id=<%= products[i]._id %>">
              <img src="/uploads/product-images/<%= products[i].productImage[0] %>" alt="<%= products[i].productName %>" />
              <h4><%= products[i].productName %></h4>
              <p>Brand: <%= products[i].brand %></p>
              <p>Price: ₹<%= products[i].salePrice.toLocaleString('en-IN') %> 
                <span class="text-muted"><strike>₹<%= products[i].regularPrice.toLocaleString('en-IN') %></strike></span>
              </p>
            </a>
            <button style="width: 140px; height: 40px; background-color: #0a0a6c;" class="add-to-cart-btn" data-id="<%= products[i]._id %>">Add to Cart</button>
          </div>
        <% } %>
      </main>
    </div>

    <!-- Pagination -->
    <div class="pagination">
      <% if (currentPage > 1) { %>
        <a class="btn" href="/shop?page=<%= currentPage - 1 %>&sort=<%= query.sort %>&query=<%= query.query %>&category=<%= query.category %>&brand=<%= query.brand %>&gt=<%= query.gt %>&lt=<%= query.lt %>">Prev</a>
      <% } %>

      <% for (let i = 1; i <= totalPages; i++) { %>
        <a class="btn <%= currentPage === i ? 'active' : '' %>" href="/shop?page=<%= i %>&sort=<%= query.sort %>&query=<%= query.query %>&category=<%= query.category %>&brand=<%= query.brand %>&gt=<%= query.gt %>&lt=<%= query.lt %>"><%= i %></a>
      <% } %>

      <% if (currentPage < totalPages) { %>
        <a class="btn" href="/shop?page=<%= currentPage + 1 %>&sort=<%= query.sort %>&query=<%= query.query %>&category=<%= query.category %>&brand=<%= query.brand %>&gt=<%= query.gt %>&lt=<%= query.lt %>">Next</a>
      <% } %>
    </div>

  </section>
</div>

<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.0/jquery.min.js"></script>

<script>
function addToWishlist(productId) {
  $.ajax({
    url: '/addToWishlist',
    method: 'POST',
    contentType: 'application/json',
    data: JSON.stringify({ productId }),
    success: (response) => {
      if (response.status) {
        Swal.fire({
          title: 'Added to wishlist',
          text: 'The product has been added to your wishlist',
          icon: 'success',
          timer: 2000
        });
      } else {
        Swal.fire({
          title: 'Already added',
          text: response.message,
          icon: 'info',
          timer: 2000
        });
      }
    },
    error: (error) => {
      Swal.fire({
        title: 'Error',
        text: 'There is an error adding the product in your wishlist',
        icon: 'error',
        timer: 2000
      });
    }
  });
}

</script>
<script>

$(document).ready(function () {
  $('.add-to-cart-btn').click(function (e) {
    e.preventDefault();
    const productId = $(this).data('id');
  

    $.ajax({
      url: '/addToCart',
      method: 'POST',
      contentType: 'application/json',
      data: JSON.stringify({ productId, quantity: 1 }),
      success: function (response) {
        if (response.success) {
          Swal.fire({
            icon: 'success',
            title: 'Product added to cart',
            text: response.message || 'Item added successfully!',
            timer: 2000
          });
        } else {
          Swal.fire({
            icon: 'error',
            title: 'Error',
            text: response.message || 'Could not add to cart.',
            timer: 2000
          });
        }
      },
      error: function () {
        Swal.fire({
          icon: 'error',
          title: 'Request Failed',
          text: 'Could not add to cart',
          timer: 2000
        });
      }
    });
  });
});
</script>                                                                                                  


