<%- include("../../views/partials/user/header") %>
<style>
  .main-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 20px;
  }
  .shop-topbar {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 20px;
  }
  .search-form {
    display: flex;
    align-items: center;
    background-color: white;
    border-radius: 25px;
    overflow: hidden;
    max-width: 280px;
    padding: 5px 10px;
    box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);
  }

  .search-input {
    flex: 1;
    font-size: 14px;
    border: none;
    outline: none;
    background-color: transparent;
    padding: 8px 10px;
    color: #333;
  }
  .search-input:focus {
    outline: none;
    border: none;
    box-shadow: none;
  }

  .search-button {
    padding: 8px 16px;
    background-color: #1e918b;
    color: #fff;
    border: none;
    cursor: pointer;
    font-size: 13px;
    border-radius: 20px;
    margin-left: 8px;
    transition: background-color 0.3s, transform 0.2s;
  }

  .search-button:hover {
    background-color: #0056b3;
    transform: scale(1.05);
  }
  .sidebar {
    padding: 20px;
    border: 1px solid #ddd;
    background-color: white;
    border-radius: 8px;
    margin-bottom: 20px;
    width: 250px;
    text-align: center;
  }
  .filter-section {
    margin-bottom: 20px;
  }
  .filter-title {
    font-weight: bold;
    margin-bottom: 10px;
    font-size: 16px;
    color: #333;
  }
  .filter-item {
    margin: 5px 0;
  }
  .filter-item a {
    text-decoration: none;
    color: #737376;
  }
  .filter-item a:hover {
    font-weight: bold;
    
  }

  .product-list-container {
    display: flex;
    gap: 20px;
  }

  .product-grid {
    display: flex;
    flex-wrap: wrap;
    gap: 30px;
    width: calc(100% - 270px);
  }

  .product-card {
    width: calc(33.333% - 25px);
    border: 1px solid #ddd;
    padding: 15px;
    border-radius: 8px;
    text-align: center;
    position: relative;

  }
  .product-card:hover {
  border-color: rgb(71, 50, 209);
  box-shadow: 0 4px 10px 0 rgb(86, 118, 234);
  transform: scale(1.05); /* This will scale the product card */
  transition: all 0.3s ease; /* Smooth transition */
}


  .product-card img {
    max-width: 100%;
    height: auto;
    border-radius: 5px;
  }

  .wishlist-btn {
    position: absolute;
    top: 8px;
    right: 8px;
    background-color: rgba(237, 247, 247, 0.8);
    color: #fff;
    padding: 8px;
    border-radius: 50%;
    cursor: pointer;
  }

  .add-to-cart-btn {
    background-color: #46698f;
    color: #fff;
    padding: 10px;
    border: none;
    border-radius: 5px;
    cursor: pointer;
    width: 100%;
    margin-top: 10px;
  }

  .pagination {
    display: flex;
    justify-content: center;
    gap: 10px;
    margin: 20px 0;
  }

  .pagination a {
    padding: 8px 12px;
    background-color: #f0f0f0;
    border: 1px solid #ddd;
    color: #333;
    text-decoration: none;
  }

  .pagination .active {
    background-color: #09139a;
    color: #fff;
  }

  .price-filter {
    padding: 10px;
    background-color: white;
    border-radius: 8px;
    margin-top: 20px;
  }

  .price-filter .price-options {
    display: flex;
    flex-direction: column;
    gap: 10px;
  }

  .price-button {
    padding: 12px 20px;
    background-color: #f1f1f1;
    color: #333;
    border: 1px solid #ddd;
    border-radius: 30px;
    cursor: pointer;
    transition: background-color 0.3s, transform 0.2s;
    text-align: center;
    font-size: 14px;
  }

  .price-button:hover {
    background-color: #d8d8e3;
    color: black;
    transform: scale(1.05);
  }

  .price-button:active {
    transform: scale(0.95);
  }

  .category-brand-container {
    text-align: center;
  }

  .product-card a {
    text-decoration: none;
    color: inherit;
  }

  .search-form {
  display: flex;
  align-items: center;
  background-color: white;
  border-radius: 8px;
  overflow: hidden;
  max-width: 480px;
  width: 100%;
  padding: 5px;
  box-shadow: 0 2px 6px rgba(0, 0, 0, 0.1);
}

.search-input {
  flex: 1;
  font-size: 15px;
  border: none;
  outline: none;
  padding: 10px 12px;
  background: white !important;
  color: #333;
}
.search-input:focus {
  outline: none;
  border-color: #f7f5f5;
  box-shadow: none;
  background: white !important;
}

input:-webkit-autofill {
  box-shadow: 0 0 0 1000px white inset !important;
  -webkit-text-fill-color: #333 !important;
}


.search-button,
.clear-btn {
  width: 100px;
  height: 38px; /* Give consistent height */
  display: flex;
  align-items: center;  /* Vertically center */
  justify-content: center;  /* Horizontally center */
  font-size: 14px;
  font-weight: 500;
  border: none;
  cursor: pointer;
  transition: background-color 0.3s;
  border-radius: 6px;
  margin-left: 8px;
}


.search-button {
  background-color: #f9fbfb;
  color: white;
}

.search-button:hover {
  background-color: #f9fcfc;
}

.clear-btn {
  background-color: #e76f51;
  color: white;
  text-decoration: none;
  display: flex;
  align-items: center;
  justify-content: center;
}

.clear-btn:hover {
  background-color: #d45a3c;
}
.filter-item.active a {
  font-weight: bold;
  color: #04000a; /* Or any highlight color you like */
}
.price-button.active {
  background-color: #d7dbde;
  color: rgb(7, 0, 0);
  
}


</style>

<div class="main-container">
  <section class="shop-page container">
    <div class="shop-topbar">
      <div class="search-bar">
        <form action="/shop" method="GET" class="search-form">
          <input type="text" name="query" placeholder="Search items..." class="search-input" value="<%= query.query %>" />
          <button type="submit" class="search-button">Search</button>
          <a href="/shop" class="search-button clear-btn">Clear</a>
        </form>
        
        
        
      </div>

      <div class="sort-dropdown">
        <form action="/shop" method="GET">
          <select name="sort" class="form-select" onchange="this.form.submit()">
            <option value="price-asc" <% if (query.sort === 'price-asc') { %> selected <% } %>>Price: Low to High</option>
            <option value="price-desc" <% if (query.sort === 'price-desc') { %> selected <% } %>>Price: High to Low</option>
            <option value="name-asc" <% if (query.sort === 'name-asc') { %> selected <% } %>>A - Z</option>
            <option value="name-desc" <% if (query.sort === 'name-desc') { %> selected <% } %>>Z - A</option>
          </select>
        </form>
      </div>
    </div>

    <div class="product-list-container">
      <aside class="sidebar" style="border-color: #888686;" >
        <div class="filter-section">
  <div style="font-family:Georgia, 'Times New Roman', Times, serif" class="filter-title">CATEGORIES</div>
  <div class="category-brand-container">
    <ul>
      <% for (let i = 0; i < category.length; i++) { 
           let isActive = query.category === String(category[i]._id);
      %>
        <li class="filter-item <%= isActive ? 'active' : '' %>">
          <a href="/shop?category=<%= category[i]._id %>&sort=<%= query.sort %>&query=<%= query.query %>&gt=<%= query.gt %>&lt=<%= query.lt %>">
            <%= category[i].name %>
          </a>
        </li>
      <% } %>
    </ul>
  </div>
</div>


        
        <div class="price-filter">
  <div style="font-family:Georgia, 'Times New Roman', Times, serif" class="filter-title">FILTER BY PRICE</div>
  <form id="price-filter-form">
    <div class="price-options">
      <% const gt = Number(query.gt); const lt = Number(query.lt); %>

      <a href="/shop?gt=0&lt=500&sort=<%= query.sort %>&query=<%= query.query %>&category=<%= query.category %>&brand=<%= query.brand %>">
        <button type="button" class="price-button <%= gt === 0 && lt === 500 ? 'active' : '' %>">Under ₹500</button>
      </a>

      <a href="/shop?gt=500&lt=1000&sort=<%= query.sort %>&query=<%= query.query %>&category=<%= query.category %>&brand=<%= query.brand %>">
        <button type="button" class="price-button <%= gt === 500 && lt === 1000 ? 'active' : '' %>">₹500 - ₹1000</button>
      </a>

      <a href="/shop?gt=1000&lt=1500&sort=<%= query.sort %>&query=<%= query.query %>&category=<%= query.category %>&brand=<%= query.brand %>">
        <button type="button" class="price-button <%= gt === 1000 && lt === 1500 ? 'active' : '' %>">₹1000 - ₹1500</button>
      </a>

      <a href="/shop?gt=1500&lt=1000000&sort=<%= query.sort %>&query=<%= query.query %>&category=<%= query.category %>&brand=<%= query.brand %>">
        <button type="button" class="price-button <%= gt === 1500 && lt === 1000000 ? 'active' : '' %>">Above ₹1500</button>
      </a>
    </div>
  </form>
</div>

      </aside>

      <main class="product-grid">
        <% for (let i = 0; i < products.length; i++) { %>
          <div class="product-card" style="height:400px" >
            <span class="wishlist-btn" onclick="addToWishlist('<%=products[i]._id%>')">❤️</span>
            <a href="/productDetails?id=<%= products[i]._id %>">
              <img src="/uploads/product-images/<%= products[i].productImage[0] %>" alt="<%= products[i].productName %>" />
              <h4><%= products[i].productName %></h4>
              <p>Brand: <%= products[i].brand %></p>
              <p>Price: ₹<%= products[i].salePrice.toLocaleString('en-IN') %> 
                <span class="text-muted"><strike>₹<%= products[i].regularPrice.toLocaleString('en-IN') %></strike></span>
              </p>
            </a>
            <button style="width: 140px; height: 40px; background-color: #0a0a6c;" class="add-to-cart-btn" data-id="<%= products[i]._id %>">Add to Cart</button>
          </div>
        <% } %>
      </main>
    </div>

    <!-- Pagination -->
    <div class="pagination">
      <% if (currentPage > 1) { %>
        <a class="btn" href="/shop?page=<%= currentPage - 1 %>&sort=<%= query.sort %>&query=<%= query.query %>&category=<%= query.category %>&brand=<%= query.brand %>&gt=<%= query.gt %>&lt=<%= query.lt %>">Prev</a>
      <% } %>

      <% for (let i = 1; i <= totalPages; i++) { %>
        <a class="btn <%= currentPage === i ? 'active' : '' %>" href="/shop?page=<%= i %>&sort=<%= query.sort %>&query=<%= query.query %>&category=<%= query.category %>&brand=<%= query.brand %>&gt=<%= query.gt %>&lt=<%= query.lt %>"><%= i %></a>
      <% } %>

      <% if (currentPage < totalPages) { %>
        <a class="btn" href="/shop?page=<%= currentPage + 1 %>&sort=<%= query.sort %>&query=<%= query.query %>&category=<%= query.category %>&brand=<%= query.brand %>&gt=<%= query.gt %>&lt=<%= query.lt %>">Next</a>
      <% } %>
    </div>

  </section>
</div>

<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.0/jquery.min.js"></script>

<script>
function addToWishlist(productId) {
  $.ajax({
    url: '/addToWishlist',
    method: 'POST',
    contentType: 'application/json',
    data: JSON.stringify({ productId }),
    success: (response) => {
      if (response.status) {
        Swal.fire({
          title: 'Added to wishlist',
          text: 'The product has been added to your wishlist',
          icon: 'success',
          timer: 2000
        });
      } else {
        Swal.fire({
          title: 'Already added',
          text: response.message,
          icon: 'info',
          timer: 2000
        });
      }
    },
    error: (error) => {
      Swal.fire({
        title: 'Error',
        text: 'There is an error adding the product in your wishlist',
        icon: 'error',
        timer: 2000
      });
    }
  });
}

</script>
<script>

$(document).ready(function () {
  $('.add-to-cart-btn').click(function (e) {
    e.preventDefault();
    const productId = $(this).data('id');
  

    $.ajax({
      url: '/addToCart',
      method: 'POST',
      contentType: 'application/json',
      data: JSON.stringify({ productId, quantity: 1 }),
      success: function (response) {
        if (response.success) {
          Swal.fire({
            icon: 'success',
            title: 'Product added to cart',
            text: response.message || 'Item added successfully!',
            timer: 2000
          });
        } else {
          Swal.fire({
            icon: 'error',
            title: 'Error',
            text: response.message || 'Could not add to cart.',
            timer: 2000
          });
        }
      },
      error: function () {
        Swal.fire({
          icon: 'error',
          title: 'Request Failed',
          text: 'Could not add to cart',
          timer: 2000
        });
      }
    });
  });
});
</script>                                                                                                  


