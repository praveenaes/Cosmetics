<%- include("../../views/partials/user/header") %>

<style>
  .profile-container {
    display: flex;
    min-height: 100vh;
    background-color: #f8f9fa;
  }

  .profile-card {
    margin: auto;
    background: #fff;
    border-radius: 20px;
    box-shadow: 0 8px 20px rgba(0, 0, 0, 0.1);
    padding: 40px;
    text-align: center;
    max-width: 600px;
  }

  .profile-img {
    width: 120px;
    height: 120px;
    object-fit: cover;
    border: 3px solid #007bff;
    border-radius: 50%;
    margin-bottom: 15px;
  }

  .profile-info p {
    font-size: 16px;
    color: #555;
  }

  .btn-custom {
    margin: 10px 5px;
    padding: 6px 18px;
  }

  .referral-box {
    margin-top: 20px;
    background-color: #e9f7ef;
    padding: 15px;
    border: 1px dashed #2878a7;
    border-radius: 10px;
    font-size: 16px;
    color: #152a57;
   
  }
</style>

<div class="profile-container">
  <!-- Sidebar -->
  <div>
    <%- include("../../views/partials/user/sidebar") %>
  </div>

  <!-- Main Content -->
  <div class="profile-card" style="width: 500px;margin-top: 100px;margin-left: 450px;" >
    <img src="/uploads/reImage/<%= user.profileImage %>" alt="Profile Image" class="profile-img" />

    <form action="/uploadProfile" method="POST" enctype="multipart/form-data" class="mt-3 d-flex flex-column align-items-center">
      <input type="file" name="profileImage" accept="image/*" class="form-control mb-2" required style="max-width: 250px;">
      <button type="submit" class="btn btn-primary btn-sm" style="background-color: #007bff;" >Upload</button>
    </form>

    <div class="profile-info mt-4">
      <h5 class="mb-1"><%= user.name %></h5>
      <p><strong>Phone:</strong> <%= user.phone %></p>
      <p><strong>Email:</strong> <%= user.email %></p>
    </div>

    <div>
      <a href="/change-email" class="btn btn-primary btn-sm btn-custom">Change Email</a>
      <a href="/change-password" class="btn btn-primary btn-sm btn-custom">Change Password</a>
       <a href="/change-name" class="btn btn-primary btn-sm btn-custom">Change Profile Name</a>

    </div>

    <!-- Referral Code Section -->
    <div class="referral-box mt-4">
      <strong>Your Referral Code:</strong>
      <div style="font-size: 18px; font-weight: bold;"><%= user.referralCode %></div>
    </div>
  </div>
</div>
