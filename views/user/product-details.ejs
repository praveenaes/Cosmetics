<%- include("../../views/partials/user/header") %>
<style>
    
</style>
<main class="main">
 <div class="page-header breadcrumb-wrap">
     <div class="container">
         <div class="breadcrumb">
             <a href="#" style="text-decoration: none; color: inherit;" rel="nofollow">Home</a>
             <span></span> Fashion
             <span></span>product detail page
         </div>
     </div>
 </div>
 <section class="mt-50 mb-50">
    <div class="container">
        <div class="row">
            <div class="col-lg-9">
                <div class="product-detail accordion-detail" style="border: 1px solid #ddd; padding: 30px; border-radius: 8px; box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); background-color: #fff;">
                    <div class="row mb-50">
                        <div class="col-md-6 col-sm-12 col-xs-12">
                            <div class="detail-gallery">
                                <span class="zoom-icon"><i class="fi-rs-search"></i></span>
                                <div class="product-image-slider">
                                    <figure class="border-radius-10">
                                        <img src="/uploads/product-images/<%=product.productImage[0]%>" alt="product image">
                                    </figure>
                                    <figure class="border-radius-10">
                                      <img src="/uploads/product-images/<%=product.productImage[1]%>" alt="product image">
                                  </figure>
                                  <figure class="border-radius-10">
                                      <img src="/uploads/product-images/<%=product.productImage[2]%>" alt="product image">
                                  </figure>
                                  <figure class="border-radius-10">
                                      <img src="/uploads/product-images/<%=product.productImage[3]%>" alt="product image">
                                  </figure>
                                  <figure class="border-radius-10">
                                      <img src="/uploads/product-images/<%=product.productImage[4]%>" alt="product image">
                                  </figure>
                                </div>
                                <div class="slider-nav-thumbnails pl-15 pr-15">
                                    <%for(let i=0;i<product.productImage.length;i++){%>
                                       <div>
                                           <img style="object-fit:contain ;" src="/uploads/product-images/<%=product.productImage[i]%>" alt="product image">
                                       </div>
                                   <%}%>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6 col-sm-12 col-xs-12">
                            <div class="detail-info">
                                <h2 class="title-detail" style="font-size: 28px; color: #333; font-weight: 600;"><%=product.productName%></h2>
                                <div class="product-detail-rating">
                                    <div class="pro-details-brand">
                                        <span style="font-size: 16px; color: #555; font-weight: bold;" >BRAND: <a href="#" style="text-decoration: none; color: #007bff;" ><%=product.brand%></a></span>
                                    </div>
                                    <div class="product-rate-cover text-end">
                                        <div class="product-rate d-inline-block">
                                            <div class="product-rating" style="width:90%"></div>
                                        </div>
                                        <span class="font-small ml-5 text-muted">
                                            <i class="fa fa-star" style="color: rgb(220, 220, 13);"></i>
                                            <i class="fa fa-star" style="color: rgb(220, 220, 13);"></i>
                                            <i class="fa fa-star" style="color: rgb(220, 220, 13);"></i>
                                            <i class="fa fa-star" style="color: rgb(220, 220, 13);"></i>
                                         (25 reviews)
                                        </span>                                    </div>
                                </div>
                                <div class="clearfix product-price-cover">
                                    <div class="product-price primary-color float-left">
                                        <ins><span class="text-brand" style="font-size: 22px; font-weight: 600;"><%=product.salePrice%></span></ins>
                                        <ins><span class="old-price font-md ml-15" style="text-decoration: line-through; color: #888;">â‚¹<%=product.regularPrice%></span></ins>
                                        <span class="save-price font-md color3 ml-15" style="font-size: 16px; color: #ff5733;">
                                          <%if(!totalOffer){%>
                                                No Offers
                                          <%}else{%>
                                                <%=totalOffer%> % offer
                                          <%}%>
                                        </span>
                                    </div>
                                </div>
                                <div class="bt-1 border-color-1 mt-15 mb-15"></div>
                                <div class="short-desc mb-30">
                                    <p style="font-size: 20px; color: #555;"><%=product.description%></p>
                                </div>
                                <div class="product_sort_info font-xs mb-30">
                                    <ul>
                                        <li class="mb-10" style="font-size: 18px;" ><i class="fi-rs-crown mr-5"></i> 1 Year Brand Warranty</li>
                                        <li class="mb-10" style="font-size: 18px;" ><i class="fi-rs-refresh mr-5"></i> 30 Day Return Policy</li>
                                        <li style="font-size: 18px;" ><i class="fi-rs-credit-card mr-5"></i> Cash on Delivery available</li>
                                    </ul>
                                </div>
                                <div class="bt-1 border-color-1 mt-30 mb-30"></div>
                                <div class="detail-extralink">
                                    <div class="detail-qty border radius">
                                        <a href="#" class="qty-down" onclick="" ><i class="fi-rs-angle-small-down"></i></a>
                                        <span class="qty-val" id="quantity">1</span>
                                        <a href="#" class="qty-up" onclick=""><i class="fi-rs-angle-small-up"></i></a>
                                    </div>
                                    <div class="product-extra-link2">
                                        <button type="submit" class="button button-add-to-cart" style="background-color: #007bff; color: white; padding: 12px 25px; border: none; border-radius: 5px;">Add to cart</button>
                                        <a aria-label="Add To Wishlist" class="action-btn hover-up" href="#"><i class="fi-rs-heart" style="color: #ff5733;"></i></a>
                                    </div>
                                </div>
                                <ul class="product-meta font-xs color-grey mt-50">
                                    <li class="mb-5" style="font-size: 15px;" >Stock Code: <a href="#" style="text-decoration: none; color: inherit;" >FWM15VKT</a></li>
                                    <li class="mb-5" style="font-size: 15px;" >Tags: <a href="#" rel="tag"></a> <a href="#" style="text-decoration: none; color: inherit;" rel="tag"><%=category.name%></a> <a href="#" rel="tag"></a></li>
                                    <%if(quantity>=1&&quantity<=5){%>
                                    <li style="font-size: 15px;" >Availability:<span class="text-warning">Only <%=quantity%> quantity left</span></li>
                                     <%}else if(quantity===0){%>
                                    <li style="font-size: 15px;" >Availability:<span class="text-danger">Out of stock</span></li>
                                      <%}else{%>
                                      <li style="font-size: 15px;" >Availability:<span class="text-success">Available now</span></li>
                                      <%}%>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

</main>
<!-- Related Products Section -->
<section class="mt-50 mb-50">
    <div class="container">
      <h3 class="section-title mb-30">Related Products</h3>
      <div class="row">
        <% if (relatedProducts.length > 0) { %>
          <% relatedProducts.forEach(function(related) { %>
            <div class="col-lg-3 col-md-4 col-6 mb-4">
              <div class="product-cart-wrap" style="border-color: blue; box-shadow: 0 2px 4px 0;" >
                <div class="product-img-action-wrap" >
                  <div class="product-img product-img-zoom">
                    <a href="/productDetails?id=<%= related._id %>">
                      <img class="default-img" src="/uploads/product-images/<%= related.productImage[0] %>" alt="Related Product" style="height: 250px; object-fit: contain;">
                    </a>
                  </div>
                </div>
                <div class="product-content-wrap">
                    <h2 style="text-decoration: none; font-size: 1.5rem; ;">
                        <a href="/productDetails?id=<%= related._id %>" style="text-decoration: none; color: #333;"> <%= related.productName %> </a>
                    </h2>
                                      <div class="product-price">
                    <span>â‚¹<%= related.salePrice %></span>
                    <span class="old-price">â‚¹<%= related.regularPrice %></span>
                  </div>
                </div>
              </div>
            </div>
          <% }); %>
        <% } else { %>
          <div class="col-12">
            <p>No related products found in this category.</p>
          </div>
        <% } %>
      </div>
    </div>
  </section>
  
<%- include("../../views/partials/user/footer") %>



