/* Coupon Cards */
.coupon-cards .card {
  transition: all 0.3s ease;
  border-left: 4px solid #4532f4;
}

.coupon-cards .card:hover {
  transform: translateY(-3px);
  box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
}

/* Payment Method Section */
input[name="payment"] {
  margin-right: 10px;
}

/* Responsive Adjustments */
@media (max-width: 768px) {
  .order-summary {
    margin-top: 20px;
  }
  
  .address-cards .card {
    margin-bottom: 15px;
  }
}

/* Badge Styling */
.badge {
  padding: 5px 10px;
  border-radius: 4px;
  font-weight: 500;
}

/* Animations */
@keyframes fadeIn {
  from { opacity: 0; }
  to { opacity: 1; }
